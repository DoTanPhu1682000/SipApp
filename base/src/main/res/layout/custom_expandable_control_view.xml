<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customLayoutParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_border_grey_round_5"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/sizeMedium"
    android:paddingBottom="@dimen/sizeMedium"
    tools:ignore="HardcodedText,RtlHardcoded,ContentDescription">

    <Space
        android:id="@+id/customPaddingLeft"
        android:layout_width="@dimen/sizeMedium"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/customImgLeft"
        android:layout_width="@dimen/_18"
        android:layout_height="@dimen/_18"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <Space
        android:id="@+id/customSpaceLeft"
        android:layout_width="@dimen/sizeMedium"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customTvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/textNormal" />

        <TextView
            android:id="@+id/customTvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/textSmall"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/customImgControl"
        android:layout_width="@dimen/_14"
        android:layout_height="@dimen/_14"
        android:layout_marginStart="@dimen/sizeMedium"
        android:layout_marginLeft="@dimen/sizeMedium"
        android:visibility="visible" />

    <Space
        android:id="@+id/customPaddingRight"
        android:layout_width="@dimen/sizeMedium"
        android:layout_height="wrap_content" />
</LinearLayout>