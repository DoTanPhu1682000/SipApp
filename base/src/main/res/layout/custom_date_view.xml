<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ContentDescription">


    <include layout="@layout/include_title_view" />

    <LinearLayout
        android:id="@+id/customLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_grey_round_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Space
            android:id="@+id/customPaddingLeft"
            android:layout_width="@dimen/sizeMedium"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/customImgLeft"
            android:layout_width="@dimen/_18"
            android:layout_height="@dimen/_18"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <Space
            android:id="@+id/customSpaceLeft"
            android:layout_width="@dimen/sizeMedium"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customTvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_effect_transparent"
            android:gravity="start|center_vertical"
            android:paddingStart="0dp"
            android:paddingTop="@dimen/_10"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/_10"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/textNormal" />

        <Space
            android:id="@+id/customSpaceRight"
            android:layout_width="@dimen/sizeMedium"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/customImgRight"
            android:layout_width="@dimen/_18"
            android:layout_height="@dimen/_18"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <Space
            android:id="@+id/customPaddingRight"
            android:layout_width="@dimen/sizeMedium"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>