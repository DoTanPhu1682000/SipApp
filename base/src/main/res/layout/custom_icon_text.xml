<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_main"
    android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="@dimen/_100"
    android:orientation="horizontal"
    tools:ignore="UseCompoundDrawables,ContentDescription">

    <Space
        android:id="@+id/customPaddingLeft"
        android:layout_width="@dimen/sizeStandard"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/customImgLeft"
        android:layout_width="@dimen/_18"
        android:layout_height="@dimen/_18"
        android:layout_gravity="bottom"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <Space
        android:id="@+id/customSpaceLeft"
        android:layout_width="@dimen/sizeStandard"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/customTvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical|start"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/textNormal" />

    <Space
        android:id="@+id/customSpaceRight"
        android:layout_width="@dimen/sizeStandard"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/customImgRight"
        android:layout_width="@dimen/_18"
        android:layout_height="@dimen/_18"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <Space
        android:id="@+id/customPaddingRight"
        android:layout_width="@dimen/sizeStandard"
        android:layout_height="wrap_content" />
</LinearLayout>