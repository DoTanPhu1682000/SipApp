<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_toast_info"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/sizeStandard">

    <ImageView
        android:id="@+id/customImgIcon"
        android:layout_width="@dimen/_30"
        android:layout_height="@dimen/_30"
        android:layout_marginEnd="@dimen/sizeMedium"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/customTvText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_24"
        tools:text="Text to show" />
</LinearLayout>