<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_8"
        android:elevation="@dimen/_8"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_12"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_16"
            android:paddingVertical="@dimen/_12">

            <ImageView
                android:layout_width="@dimen/_40"
                android:layout_height="@dimen/_40"
                android:contentDescription="@null"
                android:src="@drawable/ic_profile_user_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvUserName"
                            style="@style/H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ink500"
                            tools:text="Đỗ Tấn Phú" />

                        <ImageView
                            android:layout_width="@dimen/_14"
                            android:layout_height="@dimen/_14"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_star_unselected" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescription"
                        style="@style/P1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/ink400"
                        tools:text="Công tử" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgMore"
                    android:layout_width="@dimen/_20"
                    android:layout_height="@dimen/_20"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_more_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>