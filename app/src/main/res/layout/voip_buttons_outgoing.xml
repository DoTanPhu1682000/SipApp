<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hangup"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:src="@drawable/icon_call_hangup" />

    <ImageView
        android:id="@+id/microphone"
        android:layout_marginHorizontal="@dimen/_10"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#4B5964"
        android:padding="5dp"
        android:src="@drawable/icon_toggle_mic" />

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#4B5964"
        android:padding="5dp"
        android:src="@drawable/icon_toggle_speaker" />

</LinearLayout>