<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_16"
        android:paddingVertical="@dimen/_6">

        <ImageView
            android:id="@+id/imgCall"
            android:layout_width="@dimen/_20"
            android:layout_height="@dimen/_20"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/call_status_outgoing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTime"
                    style="@style/H5Strong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ink500"
                    tools:text="Đỗ Tấn Phú" />

                <TextView
                    android:id="@+id/tvDescription"
                    style="@style/P1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ink400"
                    android:visibility="gone"
                    tools:text="Công tử" />

                <TextView
                    android:id="@+id/tvTimeCall"
                    style="@style/P1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ink400"
                    tools:text="Hôm qua" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>